{
    // if you have a local roblox-cli already downloaded, uncomment the two configurations lines
    "version": "0.2.0",
    "configurations": [
        {
            "type": "roblox-lrdb",
            "request": "launch",
            "name": "Debug Unit Tests",
            "program": "/users/<Name>/roblox/roblox-cli",
            "args": [
                "run",
                "--load.project",
                "test-bundle.project.json",
                "--debug.on",
                "--run",
                "scripts/spec.lua",
            ],
            "cwd": "${workspaceFolder}",
            "stopOnEntry": true,

            // Optional arguments allowing customization of the runtime executable
            // "runtime": {
            //     "channel": "develop", // or "stable"
            //     "version": "latest", // or any other version
            //     "variant": "robloxdev-cli", // or "roblox-cli"
            // }
        },
    ]
}
